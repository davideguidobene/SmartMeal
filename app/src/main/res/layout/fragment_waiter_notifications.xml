<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.manager.bottomnavigation_virtualroom.waiterNotifications.WaiterNotificationsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/waiter_notification_recycler_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/reload_button_waiter_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_toTopOf="50dp" />

    <Button
        android:id="@+id/reload_button_waiter_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reload_button_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>